<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.dao.RoleDao">

    <resultMap id="baseMap" type="role">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <result column="keyword" property="keyword"></result>
        <result column="description" property="description"></result>
    </resultMap>
    <resultMap id="findRolesByUserIdMap" type="role" extends="baseMap">
        <collection
                property="permissions"
                column="id"
                ofType="permission"
                select="com.itheima.dao.PermissionDao.findPermissionsByRoleId"></collection>
        <!--
            根据角色id查询权限对象
            Set<Permission> com.itheima.dao.PermissionDao.findPermissionsByRoleId(Integer roleId);
        -->
    </resultMap>
    <select id="findRolesByUserId" resultMap="findRolesByUserIdMap" parameterType="int">
      select * from t_role where id in
          (select role_id from t_user_role where user_id = #{userId})
    </select>

    <resultMap id="findByUserIdMap" type="role">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="keyword" property="keyword"/>
        <result column="description" property="description"/>
        <collection property="permissions" column="id" ofType="Permission" select="com.itheima.dao.PermissionDao.findByRoleId"/>
        <collection property="menus" column="id" ofType="Menu" select="com.itheima.dao.MenuDao.findByRoleId"/>
    </resultMap>
    <select id="findByUserId" resultMap="findByUserIdMap">
        SELECT * FROM t_user_role u, t_role r WHERE u.role_id = r.id AND u.user_id = #{userId}
    </select>
    <select id="findPage" resultMap="findByUserIdMap">
        select * from t_role
        <where>
            <if test="value != null and value.length > 0">
                name like "%"#{value}"%"
            </if>
        </where>
    </select>
    <insert id="add" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
    INSERT INTO `itcast_health`.`t_role`
	(
	`name`,
	`keyword`,
	`description`
	)
	VALUES
	(
	#{name},
	#{keyword},
	#{description}
	);

</insert>
</mapper>