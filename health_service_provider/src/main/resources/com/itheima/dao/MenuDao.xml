<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.dao.MenuDao">

    <select id="findLevelMenu" resultType="menu">
        select distinct m.* from t_user u inner join t_user_role ur inner join t_role r
        inner join t_role_menu rm inner join t_menu m on u.id = ur.user_id
        and ur.role_id = r.id and r.id = rm.role_id and rm.menu_id = m.id
        where u.username = #{username} and m.level = #{level}
    </select>
    
    <select id="findsecondaryMenu" resultType="menu">
        select distinct m.* from t_user u inner join t_user_role ur inner join t_role r
        inner join t_role_menu rm inner join t_menu m on u.id = ur.user_id
        and ur.role_id = r.id and r.id = rm.role_id and rm.menu_id = m.id
        where u.username = #{username} and m.level = #{level}
        and parentMenuId = #{id}
    </select>


    <resultMap id="findByRoleIdMap" type="Menu">
        <id property="id" column="id"/>
        <result column="name" property="name"/>
        <result column="linkUrl" property="linkUrl"/>
        <result column="path" property="path"/>
        <result column="priority" property="priority"/>
        <result column="description" property="description"/>
        <result column="icon" property="icon"/>
        <result column="parentMenuId" property="parentMenuId"/>
        <collection property="children" column="id" ofType="Menu" select="com.itheima.dao.MenuDao.findByParentMenuId"/>
    </resultMap>
    <select id="findByRoleId" resultMap="findByRoleIdMap" >
       SELECT * FROM t_role_menu rm , t_menu m WHERE rm.menu_id = m.id AND rm.role_id = #{id} and m.level = 1
    </select>
    <select id="findByParentMenuId" resultType="Menu">
 SELECT * FROM t_menu WHERE parentMenuId = #{parentMenuId} AND LEVEL = 2
    </select>
    <select id="findPage" resultType="menu">
        select * from t_menu
        <where>
            <if test="value != null and value.length > 0">
                name like "%"#{value}"%"
            </if>
        </where>
    </select>

    <select id="findPage" resultType="Menu" >
        select * from t_menu
        <include refid="base"/>
    </select>

    <sql id="base">
        <where>
            <if test="s!=null and s.length>0">
                level like "%"#{s}"%" or  name like "%"#{s}"%"
            </if>
        </where>
    </sql>

    <select id="findName" resultType="Map">
        select priority value , name label from t_menu where level=1
    </select>

    <select id="selectParentsCounts" resultType="int">
        select count(0) from t_menu where level = #{l};
    </select>
    <select id="selectParentsId" resultType="int">
        select id from t_menu where level=#{l} and priority =#{p}
    </select>

    <select id="selectChirdCounts" resultType="int">
        select COUNT(0) from t_menu where parentMenuId =#{id}
    </select>
    <insert id="addALL">
        INSERT INTO `t_menu`(`id`, `name`, `linkUrl`, `path`, `priority`, `icon`, `description`, `parentMenuId`, `level`) VALUES (null , #{name}, #{linkUrl}, #{path}, #{priority},#{icon}, #{description}, #{parentMenuId}, #{level});
    </insert>

    <select id="findById" resultType="Menu">
        select * from t_menu where id = #{id}
    </select>

    <update id="edit">
        UPDATE `t_menu` SET `name` = #{name}, `linkUrl` = #{linkUrl}, `path` = #{path}, `priority` = #{priority}, `icon` = #{icon}, `description` = #{description}, `parentMenuId` = #{parentMenuId}, `level` = #{level} WHERE `id` = #{id};
    </update>

    <delete id="delById">
        delete from t_menu where id=#{id}
    </delete>

    <select id="selectById" resultType="String">
        select level from t_menu where id=#{id}
    </select>

    <select id="selectPriorityById" resultType="int">
        select priority from t_menu where id = #{id}
    </select>
</mapper>