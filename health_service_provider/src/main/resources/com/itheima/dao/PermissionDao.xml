<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.dao.PermissionDao">
    <select id="findPermissionsByRoleId" resultType="permission" parameterType="int">
        select * from t_permission where id in (select permission_id from t_role_permission where role_id = #{roleId})
    </select>

    <select id="findByRoleId" resultType="Permission">
       SELECT * FROM t_permission p ,t_role_permission rp WHERE p.id = rp.permission_id AND rp.role_id = #{id}
    </select>

    <select id="findByCondition" parameterType="string" resultType="Permission">
        select * from t_permission
        <where>
            <if test="value != null and value.length > 0">
                id =#{value} or  name like "%"#{value}"%"
            </if>
        </where>
    </select>

    <!--添加权限-->
    <insert id="add" parameterType="Permission">
        INSERT INTO `t_permission`
        ( `id`, `name`, `keyword`, `description`)
        VALUES (#{id}, #{name}, #{keyword}, #{description})
    </insert>


    <!--基于ID获取数据-->
    <select id="findById" resultType="com.itheima.pojo.Permission">
        SELECT * FROM t_permission WHERE id = #{id}
    </select>



    <!--编辑-->
    <update id="edit" parameterType="Permission">
        UPDATE t_permission
        set name = #{name},keyword = #{keyword},description = #{description}
        where id = #{id}
    </update>


    <select id="findCountById" resultType="long" parameterType="int">
        select count(0) from t_role_permission where permission_id = #{id}
    </select>

    <delete id="delById" parameterType="int">
        delete from t_permission where id = #{id}
    </delete>









</mapper>